<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
		id="GravarModuloDialog"
		title="{view>/titulo}"
		class="sapUiSmallMargin">
   	
   		<VBox id="vBoxModulo" class="sapUiSmallMargin sapUiSizeCompact">	
			<Label text="Código:" labelFor="codigo"/>
			<Input value="{Codigo}" id="codigo" required="true"/>
			
			<Label text="Nome:" labelFor="nome"/>
			<Input value="{Nome}" id="nome" required="true"/>
			
			<Label text="Descrição:" labelFor="codigo"/>
			<Input value="{Descricao}" id="descricao" required="true"/>
			
			<Label text="Ícone:" labelFor="icone"/>
			<Input value="{Icone}" id="icone" />
		</VBox>
   		
   		<buttons>
   			<Button text="Salvar" press="onSaveDialog"/>
   			<Button text="Fechar" press="onCloseDialog"/>
   		</buttons>
   </Dialog>
</core:FragmentDefinition>