<mvc:View controllerName="br.com.idxtecModulos.controller.Modulos"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App id="appModulo">
		<pages>
			<Page showHeader="false">
				<content>
					<Panel headerText="Módulo">
						<VBox class="sapUiSmallMargin">
							<t:Table id="tableModulo"
								rows="{path: '/Modulos'}"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Interactive"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Módulos:"/>
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterPorperty="Codigo" sortProperty="Codigo">
										<Label text="Código:"/>
										<t:template>
											<Text text="{Codigo}"/>
										</t:template>
									</t:Column>
									<t:Column filterPorperty="Nome" sortProperty="Nome">
										<Label text="Nome:"/>
										<t:template>
											<Text text="{Nome}"/>
										</t:template>
									</t:Column>
									<t:Column filterPorperty="Descricao" sortProperty="Descricao">
										<Label text="Descrição:"/>
										<t:template>
											<Text text="{Descricao}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</VBox>
					</Panel>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>