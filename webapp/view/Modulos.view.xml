<mvc:View controllerName="br.com.idxtecModulos.controller.Modulos"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App id="appModulo">
		<pages>
			<Page>
				<content>
					<t:Table id="tableModulo"
						rows="{path: '/Modulos'}"
						alternateRowColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de Módulos:"/>
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterPorperty="Codigo" sortProperty="Codigo">
								<Label text="Código:"/>
								<t:template>
									<Text text="{Codigo}"/>
								</t:template>
							</t:Column>
							<t:Column filterPorperty="Nome" sortProperty="Nome">
								<Label text="Nome:"/>
								<t:template>
									<Text text="{Nome}"/>
								</t:template>
							</t:Column>
							<t:Column filterPorperty="Descricao" sortProperty="Descricao">
								<Label text="Descrição:"/>
								<t:template>
									<Text text="{Descricao}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button id="refresh" icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button id="incluir" text="Incluir novo" press="onIncluir"/>
						<Button id="editar" text="Editar" press="onEditar"/>
						<Button id="remover" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>